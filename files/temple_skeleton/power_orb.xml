<Entity 
  name="$projectile_default" 
   >

	<Base file="data/entities/base_projectile.xml" >
		<VelocityComponent
    		gravity_y="0"
			air_friction="-0.0"
			mass="0.05"
			>
    	</VelocityComponent> 
	</Base>
	
	<HomingComponent
		target_tag="prey"
		homing_targeting_coeff="2"
		detect_distance="350"
		homing_velocity_multiplier="1.0"
		>
	</HomingComponent>

  <ProjectileComponent 
    _enabled="1" 
	lob_min="0.8"
  	lob_max="1.0"
  	speed_min="100"
  	speed_max="115"
    die_on_low_velocity="0"
    on_death_explode="1"
    on_death_gfx_leave_sprite="0" 
    on_lifetime_out_explode="1"
	explosion_dont_damage_shooter="1"
    damage="0.3"
    on_collision_die="1"
    lifetime="150" >
		<config_explosion
			never_cache="1" 
			camera_shake="15" 
			explosion_radius="25" 
			explosion_sprite="data/particles/explosion_032_plasma.xml" 
			load_this_entity="mods/SpookyMode/files/temple_skeleton/main_swirly_blue_small.xml"
			explosion_sprite_lifetime="0.0" 
			create_cell_probability="0" 
			create_cell_material="spark_blue" 
			ray_energy="100000"
			hole_destroy_liquid="1" 
			hole_enabled="1" 
			damage = "0.5"
			hole_image="data/temp/explosion_hole.png"
			explosion_sprite_emissive="0"
			explosion_sprite_additive="1"
			particle_effect="0" 
			damage_mortals="1"
			physics_explosion_power.min="0.04" 
			physics_explosion_power.max="0.06"
			physics_throw_enabled="1"
			shake_vegetation="1"  
			sparks_enabled="1" 
			sparks_count_max="80" 
			sparks_count_min="60"
			spark_material="spark_blue"
			light_fade_time="1.2" 
			light_r="15"
			light_g="15"
			light_b="200"
			stains_enabled="1" 
			stains_image="data/temp/explosion_stain.png"
			audio_event_name="explosions/magic_rocket_mid" >
		</config_explosion>
  </ProjectileComponent>
  
  <LightComponent 
    _enabled="1" 
    radius="150" 
    r="22"
    g="22"
    b="220">
  </LightComponent>
  
  <SpriteComponent 
    _enabled="1" 
    alpha="1" 
    image_file="data/projectiles_gfx/orb_blue.xml" 
    next_rect_animation="" 
    offset_x="0" 
    offset_y="0" 
    rect_animation="fireball" 
	emissive="1"
    additive="1"
     
	update_transform_rotation="1"
	>
  </SpriteComponent>
  
	<SpriteParticleEmitterComponent
		sprite_file="data/projectiles_gfx/orb_blue.xml"
		delay="0"
		lifetime="1.4"
		sprite_centered="0"
		render_back="1"
		color.r="1" color.g="1" color.b="1" color.a="0.6"
		color_change.r="0" color_change.g="0" color_change.b="0" color_change.a="-4"
		velocity.x="0" velocity.y="0"
		gravity.x="0" gravity.y="0"
		velocity_slowdown="0"
		rotation="0"
		angular_velocity="0"
		use_rotation_from_entity="1"
		use_velocity_as_rotation="0"
		scale.x="1" scale.y="1"
		scale_velocity.x="0" scale_velocity.y="0"
		emission_interval_min_frames="2"
		emission_interval_max_frames="2"
		count_min="1" count_max="1"
    >
  </SpriteParticleEmitterComponent>
	
	<Entity>
	
		<InheritTransformComponent
		only_position="1">
		<Transform position.x="0"   position.y="-11" ></Transform>
		</InheritTransformComponent>
		
	  <SpriteComponent 
		_enabled="1" 
		alpha="1" 
		image_file="mods/SpookyMode/files/temple_skeleton/power_orb_sprite.xml" 
		next_rect_animation="" 
		offset_x="0" 
		offset_y="0" 
		rect_animation="fireball" 
		emissive="0"
		additive="0"
		 
		update_transform_rotation="1"
		>
	  </SpriteComponent>
	
	  <LuaComponent
		script_source_file="mods/SpookyMode/files/temple_skeleton/entity_rotator.lua"
		execute_every_n_frame="1"
		>
	  </LuaComponent>

	</Entity>
	
	<AudioComponent
		file="data/audio/Desktop/projectiles.bank"
		event_root="projectiles/orb_b" >
	</AudioComponent>
	
	<AudioLoopComponent
		file="data/audio/Desktop/projectiles.bank"
		event_name="projectiles/magic_big_passby"
		auto_play="1">
	</AudioLoopComponent>
	
	<VariableStorageComponent
		name="projectile_file"
		value_string="data/entities/projectiles/orb_touch_blood.xml"
		>
	</VariableStorageComponent>
</Entity>