<Sprite
  filename="mods/SpookyMode/files/golem/sprite.png"
  default_animation="sleep">

  <!-- sleep -->
  <RectAnimation
    name="sleep"
    pos_x="38"
    pos_y="0"
    frame_count="1"
    frame_width="38"
    frame_height="32"
    frame_wait="0.25"
    frames_per_row="1"
    loop="1">
  </RectAnimation>

  <!-- wake -->
  <RectAnimation
    name="wake"
    pos_x="38"
    pos_y="0"
    frame_count="5"
    frame_width="38"
    frame_height="32"
    frame_wait="0.25"
    frames_per_row="5"
    next_animation="stand"
    loop="0">
  </RectAnimation>

  <!-- stand -->
  <RectAnimation
    name="stand"
    pos_x="0"
    pos_y="32"
    frame_count="6"
    frame_width="38"
    frame_height="32"
    frame_wait="0.25"
    frames_per_row="6"
    loop="1">
  </RectAnimation>

  <!-- walk -->
  <RectAnimation
    name="walk"
    pos_x="0"
    pos_y="64"
    frame_count="6"
    frame_width="38"
    frame_height="32"
    frame_wait="0.18"
    frames_per_row="6"
    loop="1">
    <Event frame="0" name="step" probability="1" check_physics_material="1"/>
    <Event frame="3" name="step" probability="1" check_physics_material="1"/>
  </RectAnimation>

  <!-- shoot -->
  <RectAnimation
    name="wind_up"
    pos_x="0"
    pos_y="98"
    frame_count="4"
    frame_width="37"
    frame_height="32"
    frame_wait="0.2"
    frames_per_row="4"
    loop="0">
    <!-- <Event frame="4" name="hit" probability="1" check_physics_material="0"/> -->
  </RectAnimation>

  <RectAnimation
    name="blink_slow"
    pos_x="0"
    pos_y="131"
    frame_count="8"
    frame_width="37"
    frame_height="32"
    frame_wait="0.083"
    frames_per_row="8"
    loop="1">
    <!-- <Event frame="4" name="hit" probability="1" check_physics_material="0"/> -->
  </RectAnimation>

  <RectAnimation
    name="blink_fast"
    pos_x="0"
    pos_y="131"
    frame_count="8"
    frame_width="37"
    frame_height="32"
    frame_wait="0.0415"
    frames_per_row="8"
    loop="1">
  </RectAnimation>

  <RectAnimation
    name="blink_fastest"
    pos_x="0"
    pos_y="131"
    frame_count="8"
    frame_width="37"
    frame_height="32"
    frame_wait="0.0207"
    frames_per_row="8"
    loop="1">
  </RectAnimation>

  <RectAnimation
    name="attack"
    pos_x="152"
    pos_y="97"
    frame_count="1"
    frame_width="38"
    frame_height="32"
    frame_wait="0.08"
    frames_per_row="1"
    loop="0">
    <!-- <Event frame="4" name="hit" probability="1" check_physics_material="0"/> -->
  </RectAnimation>

</Sprite>
